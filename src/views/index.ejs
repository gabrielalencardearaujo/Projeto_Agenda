<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos abaixo</p>

      <%- include('includes/messages.ejs') %>

      <% if(contatos.length > 0) { %>
        <div class="responsive-table">
          <table class="table my-3">
            <% contatos.forEach(contato => { %>
              <tr>
                <td><%= contato.nome %></td>
                <td><%= contato.sobrenome %></td>
                <td><%= contato.email %></td>
                <td><%= contato.telefone %></td>
                <td><a class="text-success nav-link" href="/contato/<%= contato._id %>">Editar</a></td>
                <td><a class="text-danger nav-link" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
              </tr>
            <%});%>
          </table>
        </div>
      <%} else {%>
        <p class="lead text-center my-5 opacity-50">Nao existe contatos na sua agenda</p>
      <% } %>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer') %>
    